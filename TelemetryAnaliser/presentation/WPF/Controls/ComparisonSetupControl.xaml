<UserControl x:Class="TelemetryAnalyzer.Presentation.WPF.Controls.ComparisonSetupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF1E1E1E">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Reference Lap Selection -->
        <Border Grid.Column="0" Background="#FF2D2D30" CornerRadius="6" Padding="12" Margin="4">
            <StackPanel>
                <TextBlock Text="🥇 Reference Lap" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                
                <ComboBox Name="ReferenceLapCombo" Background="#FF1A1A1A" Foreground="White" 
                          BorderBrush="#FF404040" Height="32" Margin="0,0,0,8"
                          SelectionChanged="ReferenceLapCombo_SelectionChanged"/>
                
                <TextBlock Name="ReferenceTimeText" Text="Time: --:--:---" Foreground="#FFCCCCCC" FontSize="12"/>
                <TextBlock Name="ReferenceDriverText" Text="Driver: ---" Foreground="#FFCCCCCC" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- VS -->
        <TextBlock Grid.Column="1" Text="VS" Foreground="White" FontWeight="Bold" FontSize="18" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="16,0"/>

        <!-- Comparison Lap Selection -->
        <Border Grid.Column="2" Background="#FF2D2D30" CornerRadius="6" Padding="12" Margin="4">
            <StackPanel>
                <TextBlock Text="🥈 Comparison Lap" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                
                <ComboBox Name="ComparisonLapCombo" Background="#FF1A1A1A" Foreground="White" 
                          BorderBrush="#FF404040" Height="32" Margin="0,0,0,8"
                          SelectionChanged="ComparisonLapCombo_SelectionChanged"/>
                
                <TextBlock Name="ComparisonTimeText" Text="Time: --:--:---" Foreground="#FFCCCCCC" FontSize="12"/>
                <TextBlock Name="ComparisonDriverText" Text="Driver: ---" Foreground="#FFCCCCCC" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Compare Button -->
        <Border Grid.Column="3" Background="#FF007ACC" CornerRadius="6" Margin="4">
            <Button Name="CompareButton" Content="⚖️ Compare" 
                    Background="Transparent" Foreground="White" BorderThickness="0"
                    FontWeight="Bold" FontSize="14" Padding="20,0" 
                    IsEnabled="False" Click="CompareButton_Click"/>
        </Border>
    </Grid>
</UserControl>
