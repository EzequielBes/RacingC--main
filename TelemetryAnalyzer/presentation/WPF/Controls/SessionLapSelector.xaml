<UserControl x:Class="TelemetryAnalyzer.Presentation.WPF.Controls.SessionLapSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TelemetryAnalyzer.Presentation.WPF.Controls"
             xmlns:viewModels="clr-namespace:TelemetryAnalyzer.Presentation.WPF.ViewModels"
             xmlns:models="clr-namespace:TelemetryAnalyzer.Core.Models.LapAnalysis"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:MainViewModel, IsDesignTimeCreatable=False}"
             Background="#FF1E1E1E">

    <UserControl.Resources>
        <!-- Data Template for Lap Data -->
        <DataTemplate x:Key="LapTemplate" DataType="{x:Type models:LapData}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding LapNumber, StringFormat='Lap {0}: '}" Foreground="#B0B0B0"/>
                <TextBlock Text="{Binding LapTime, StringFormat='{}{0:mm\\:ss\\.fff}'}" Foreground="White"/>
                <TextBlock Text=" (PB)" Foreground="#FFD700" FontWeight="Bold" Visibility="{Binding IsPersonalBest, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Text=" (Invalid)" Foreground="#DC143C" FontStyle="Italic" Visibility="{Binding IsValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Hierarchical Data Template for Sessions -->
        <HierarchicalDataTemplate x:Key="SessionTemplate" DataType="{x:Type viewModels:SessionListItemViewModel}" ItemsSource="{Binding Laps}">
            <!-- We need to expose Laps in SessionListItemViewModel or load them on demand -->
            <!-- For now, let's display session info. Laps need adjustment in ViewModel/Model -->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="{Binding Game, StringFormat='Game: {0}'}" FontSize="10" Foreground="#A0A0A0"/>
                <TextBlock Text="{Binding Track, StringFormat='Track: {0}'}" FontSize="10" Foreground="#A0A0A0"/>
                <TextBlock Text="{Binding Car, StringFormat='Car: {0}'}" FontSize="10" Foreground="#A0A0A0"/>
                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" FontSize="10" Foreground="#A0A0A0"/>
            </StackPanel>
            <!-- ItemTemplate for laps would go here if Laps property existed -->
            <!-- <HierarchicalDataTemplate.ItemTemplate>
                <StaticResource ResourceKey="LapTemplate"/>
            </HierarchicalDataTemplate.ItemTemplate> -->
        </HierarchicalDataTemplate>

        <!-- Converters (need to be defined globally or here) -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Need an InverseBooleanToVisibilityConverter -->
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/> 

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- Row for Filter TextBox -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" CornerRadius="6,6,0,0" Padding="12,8">
            <TextBlock Text="📁 Sessions &amp; Laps" Foreground="White" FontWeight="Bold" FontSize="14"/>
        </Border>

        <!-- Filter Input -->
        <TextBox Grid.Row="1" Name="FilterTextBox" 
                 Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                 Background="#FF252526" Foreground="White" BorderBrush="#FF404040" 
                 BorderThickness="1" Padding="8,4" Margin="8,4,8,4"
                 ToolTip="Filter sessions by name, game, track, or car"/>
        <!-- Add placeholder text behavior if needed -->

        <!-- Sessions and Laps Tree -->
        <Border Grid.Row="2" Background="#FF2D2D30" BorderThickness="1,0,1,0" BorderBrush="#FF404040">
            <!-- Bind ItemsSource to the ViewModel's Sessions collection -->
            <!-- Use ItemTemplateSelector or HierarchicalDataTemplate -->
            <TreeView Name="SessionTreeView" Background="Transparent" BorderThickness="0"
                      ItemsSource="{Binding Sessions}" 
                      ItemTemplate="{StaticResource SessionTemplate}"
                      SelectedItemChanged="SessionTreeView_SelectedItemChanged">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Margin" Value="0,1"/>
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="IsExpanded" Value="False"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Border>

        <!-- Actions -->
        <Border Grid.Row="3" Background="#FF2D2D30" CornerRadius="0,0,6,6" Padding="12,8">
            <StackPanel>
                 <!-- Bind Delete Command -->
                <Button Name="DeleteSessionButton" Content="🗑️ Delete Selected" 
                        Command="{Binding DeleteSessionCommand}"
                        CommandParameter="{Binding ElementName=SessionTreeView, Path=SelectedItem}"
                        Background="#DC3545" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,4,0,0"/>
                
                <!-- Refresh Button -->
                 <Button Name="RefreshButton" Content="🔄 Refresh List" 
                        Command="{Binding RefreshSessionsCommand}"
                        Background="#FF6C757D" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,4,0,0"/>

                <!-- Analyze/Compare/Export buttons (enablement logic in code-behind for now) -->
                <Button Name="AnalyzeLapButton" Content="📊 Analyze Selected" 
                        Background="#FF007ACC" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,4,0,0" IsEnabled="False"
                        Click="AnalyzeLapButton_Click"/>
                
                <Button Name="CompareLapsButton" Content="⚖️ Compare Laps" 
                        Background="#FF28A745" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,4,0,0" IsEnabled="False"
                        Click="CompareLapsButton_Click"/>
                
                <Button Name="ExportLapButton" Content="💾 Export Lap" 
                        Background="#FF6C757D" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,4,0,0" IsEnabled="False"
                        Click="ExportLapButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

<!-- Add InverseBooleanToVisibilityConverter class in code-behind or separate file -->

