<UserControl x:Class="TelemetryAnalyzer.Presentation.WPF.Controls.LiveDataPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF1E1E1E">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            
            <!-- Car Data Section -->
            <Border Background="#FF2D2D30" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="🏎️ Car Data" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Speed:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Name="SpeedText" Text="0 km/h" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="RPM:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Name="RpmText" Text="0" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Gear:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Name="GearText" Text="N" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Fuel:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Name="FuelText" Text="0 L" Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Pedals Section -->
            <Border Background="#FF2D2D30" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="🦵 Pedals" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <!-- Throttle Bar -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Throttle" Foreground="#FFCCCCCC" FontSize="11" VerticalAlignment="Center"/>
                        
                        <Border Grid.Column="1" Background="#FF1A1A1A" Height="16" CornerRadius="2" Margin="8,0">
                            <Rectangle Name="ThrottleBar" Fill="Green" HorizontalAlignment="Left" CornerRadius="2"/>
                        </Border>
                        
                        <TextBlock Grid.Column="2" Name="ThrottlePercent" Text="0%" Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Brake Bar -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Brake" Foreground="#FFCCCCCC" FontSize="11" VerticalAlignment="Center"/>
                        
                        <Border Grid.Column="1" Background="#FF1A1A1A" Height="16" CornerRadius="2" Margin="8,0">
                            <Rectangle Name="BrakeBar" Fill="Red" HorizontalAlignment="Left" CornerRadius="2"/>
                        </Border>
                        
                        <TextBlock Grid.Column="2" Name="BrakePercent" Text="0%" Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Session Info -->
            <Border Background="#FF2D2D30" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="🏁 Session" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Lap:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Name="CurrentLapText" Text="1" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Position:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Name="PositionText" Text="1st" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Lap Time:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Name="LapTimeText" Text="00:00.000" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Best Time:" Foreground="#FFCCCCCC" FontSize="12"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Name="BestTimeText" Text="00:00.000" Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Tire Temperatures -->
            <Border Background="#FF2D2D30" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="🔥 Tire Temperatures" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Front Tires -->
                        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="FL" Foreground="#FFCCCCCC" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock Name="FrontLeftTemp" Text="0°C" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="FR" Foreground="#FFCCCCCC" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock Name="FrontRightTemp" Text="0°C" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Rear Tires -->
                        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock Text="RL" Foreground="#FFCCCCCC" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock Name="RearLeftTemp" Text="0°C" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock Text="RR" Foreground="#FFCCCCCC" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock Name="RearRightTemp" Text="0°C" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>