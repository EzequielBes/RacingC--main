<UserControl x:Class="TelemetryAnalyzer.Presentation.WPF.Controls.SessionLapSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" CornerRadius="6,6,0,0" Padding="12,8">
            <TextBlock Text="📁 Sessions & Laps" Foreground="White" FontWeight="Bold" FontSize="14"/>
        </Border>

        <!-- Sessions and Laps Tree -->
        <Border Grid.Row="1" Background="#FF2D2D30" BorderThickness="1,0,1,0" BorderBrush="#FF404040">
            <TreeView Name="SessionTreeView" Background="Transparent" BorderThickness="0"
                      SelectedItemChanged="SessionTreeView_SelectedItemChanged">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Margin" Value="0,1"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Border>

        <!-- Actions -->
        <Border Grid.Row="2" Background="#FF2D2D30" CornerRadius="0,0,6,6" Padding="12,8">
            <StackPanel>
                <Button Name="AnalyzeLapButton" Content="📊 Analyze Selected" 
                        Background="#FF007ACC" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,0,0,4" IsEnabled="False"
                        Click="AnalyzeLapButton_Click"/>
                
                <Button Name="CompareLapsButton" Content="⚖️ Compare Laps" 
                        Background="#FF28A745" Foreground="White" BorderThickness="0"
                        Padding="8,4" Margin="0,0,0,4" IsEnabled="False"
                        Click="CompareLapsButton_Click"/>
                
                <Button Name="ExportLapButton" Content="💾 Export Lap" 
                        Background="#FF6C757D" Foreground="White" BorderThickness="0"
                        Padding="8,4" IsEnabled="False"
                        Click="ExportLapButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>